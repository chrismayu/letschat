<%- model_class = Icon -%>
  <div class="block"> 
 <div class="row">  
  <div class="col-sm-offset-1 col-sm-10"> 
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
 
  <dt><strong><%= model_class.human_attribute_name(:icon_css) %>:</strong></dt>
  <dd><%= @icon.icon_css %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @icon.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:top_icons) %>:</strong></dt>
  <dd><%= @icon.top_icons %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              icons_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_icon_path(@icon), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              icon_path(@icon),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

</div></div></div>