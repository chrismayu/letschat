	  <dd><%= @detail.social_link_8 %></dd>
	  <%end%>
	  <% if @detail.social_link_9? %>
	  <dt><strong><%= model_class.human_attribute_name(:social_link_9) %>:</strong></dt>
	  <dd><%= @detail.social_link_9 %></dd>
	  <%end%>
	  <% if @detail.social_link_10? %>
	  <dt><strong><%= model_class.human_attribute_name(:social_link_10) %>:</strong></dt>
	  <dd><%= @detail.social_link_10 %></dd>
	  <%end%>
	</dl>
</div>	
	
</div>
<div class="col-sm-2">
</div>

 
 
 

</div>

 
