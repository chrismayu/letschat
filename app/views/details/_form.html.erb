<%= simple_form_for @detail, :html => { :class => 'form-horizontal' } do |f| %>
 
 
  <%= f.input :details_email, :label=>"Your Email:", :placeholder=>"Your Email", :input_html => { :class => "enroll_input col-xs-4"}  %>
  <%= error_span(@detail[:details_email]) %>
  <%= f.input :cellphone , :input_html => { :class => "enroll_input col-xs-4"} %>
  <%= error_span(@detail[:cellphone]) %>
 

   
  <%= f.input :social_link_1 , :input_html => { :class => "enroll_input col-xs-4"} %>
  <%= error_span(@detail[:social_link_1]) %>
  <%= f.input :social_link_2, :input_html => { :class => "enroll_input col-xs-4"}  %>
  <%= error_span(@detail[:social_link_2]) %>
  <%= f.input :social_link_3, :input_html => { :class => "enroll_input col-xs-4"}  %>
  <%= error_span(@detail[:social_link_3]) %>
 

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
<% end %>
